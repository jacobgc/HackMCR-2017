<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Co-op Bereavement | Events</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb"
        crossorigin="anonymous">
</head>

<body>
    <% include ./header.ejs %>
        <%
    function isEven(n) {
        return n % 2 == 0;
    } 
    var curPage = page;
    %>

            <div class="container-fluid">
                <div class="row">
                    <% for(var i=0; i < events.length; i++) { %>
                        <% if(isEven(i)) {%>
                            <div class="w-100"></div>
                            <br>
                            <%} %>
                                <div class="card" style="width: 25%;">
                                    <div class="card-body">
                                        <h4 class="card-title">
                                            <%=events[i].name%>
                                        </h4>
                                        <p class="card-text">
                                            <%=events[i].description%>
                                        </p>
                                        <br>
                                        <a href="<%=events[i].link%>" class="btn btn-primary">Check it out!</a>
                                    </div>
                                </div>
                                <br>
                                <% } %>
                </div>
            </div>

            <div class="container">
                <div class="row">
                    <div class="col"></div>
                    <div class="col">
                        <nav>
                            <ul class="pagination">
                                <li class="page-item">
                                    <a class="page-link" href="http://localhost:3000/events?lat=%2053.477194&lon=-2.2547625&page=<%=page-1%>">Previous</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="http://localhost:3000/events?lat=%2053.477194&lon=-2.2547625&page=<%=Number(page) +1%>">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                    <div class="col"></div>
                </div>
            </div>


            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn"
                crossorigin="anonymous"></script>
</body>

</html>